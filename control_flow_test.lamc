// LAMC Control Flow Test

// If statement
x = 10
if x > 5 {
    print("x is greater than 5")
}

// If-else statement
y = 3
if y > 10 {
    print("big")
} else {
    print("small")
}

// If-else if-else chain
score = 85
if score >= 90 {
    print("A")
} else if score >= 80 {
    print("B")
} else if score >= 70 {
    print("C")
} else {
    print("F")
}

// While loop
counter = 0
while counter < 5 {
    print(counter)
    counter = counter + 1
}

// For loop with range
for i in 0..10 {
    print(i)
}

// For loop with array
numbers = [1, 2, 3, 4, 5]
for num in numbers {
    print(num)
}

// For loop with index
for i, num in numbers {
    print(i)
    print(num)
}

// Infinite loop with break
count = 0
loop {
    if count >= 10 {
        break
    }
    count = count + 1
}

// Return statement
func add(a, b) {
    return a + b
}

func greet() {
    print("Hello")
    return
}
